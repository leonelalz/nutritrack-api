				{
					"name": "Activar Plan",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.id) {",
									"        pm.collectionVariables.set('usuarioPlanId', jsonData.data.id);",
									"        console.log('✅ Plan activado con ID:', jsonData.data.id);",
